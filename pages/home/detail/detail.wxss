

.audio-play-detail .audio-author {
    height: 100rpx;
    background: #FFFFFF;
    border-top: 1rpx solid #D0D0D0;
}
.audio-play-detail .audio-author .left {
    float: left;
    margin-left: 30rpx;
    height: 100rpx;
    font-size: 28rpx;
    color: #000000;
    letter-spacing: 0.4rpx;
}
.audio-play-detail .audio-author image{
    width: 50rpx;
    height: 50rpx;
    margin-right: 20rpx;
    border: 1rpx solid #fefefe;
}

.audio-play-detail .audio-author .follow-button {
    float: right;
    margin: 30rpx 30rpx 0 0;
    background: #FFB307;
    border-radius: 6rpx;
    color: #fff;
}
.audio-play-detail .audio-author .follow-button.cancel {
    color: #FFB307;
    background: #fff;
}

.audio-play-detail .play {
    position: relative;
    height: 460rpx;
    overflow: hidden;
}

.audio-play-detail .play .bg {
    width: 100%;
    height: 460rpx;
}

.audio-play-detail .play .play1 {
    width: 130rpx;
    height: 130rpx;
    position: absolute;
    top: 50%;
    left: 50%;
    margin: -65rpx 0 0 -65rpx;
}

.audio-play-detail .slider slider {
    margin: 10rpx 30rpx;
}

.audio-play-detail .slider .time {
    line-height: 40rpx;
}

.audio-play-detail .slider text {
    padding: 0 30rpx;
    font-size: 22rpx;
    color: #888;
    letter-spacing: 0.31rpx;
    text-align: left;
    line-height: 30rpx;
    height: 30rpx;
    display: inline-block;
}

.audio-play-detail .slider .right {
    float: right;
}


.audio-info {
    margin: 10rpx 30rpx;
    padding-bottom: 220rpx;
}

.audio-info .title {
    font-size: 34rpx;
    font-weight: bold;
    color: #000;
    letter-spacing: 0.43rpx;
}

.audio-info .author {
    font-size: 26rpx;
    color: #888;
    letter-spacing: 0.37rpx;
    padding: 10rpx 0;
}

.audio-info .content {
    font-size: 30rpx;
    color: #353535;
    letter-spacing: 0.4rpx;
    line-height: 42rpx;
    
    
}
.audio-bottom {
    position: fixed;
    bottom: 0;
    left: 0;
    right: 0;
    height: 100rpx;
    border-top: 1rpx solid  #D0D0D0;
    background: #fff;
}
.audio-bottom .flex-text {
    float: left;
    font-size: 26rpx;
    color: #353535;
    letter-spacing: 0.37rpx;
    width: 200rpx;
    height: 100rpx;
    background: transparent;
}
.audio-play-detail .image-home5, .audio-play-detail  .image-home7 {
    width: 40rpx;
    height: 40rpx;
    margin-right: 20rpx;
}

.audio-play-detail .image-play2 {
    width: 300rpx;
    height: 110rpx;
    position: fixed;
    bottom: 10rpx;
    right: 30rpx;
}

.audio-play-detail .go-home {
    width: 100rpx;
    height: 100rpx;
    position: fixed;
    left: 40rpx;
    bottom: 110rpx;
    z-index: 10;
}
.audio-play-detail .go-home image {
    width: 100rpx;
    height: 100rpx;
}
