.others .bg-view {
    margin: 40rpx 30rpx 0rpx; 
    height: 190rpx;
    position: relative
}

.others .bg-view .bg {
    position: absolute;
    width: 100%;
    height: 100%;
    z-index: 1;
}

.others .bg-view .flex-text {
    font-size: 30rpx;
    color: #000000;
    letter-spacing: 0.43rpx;
    position: absolute;
    left: 70rpx;
    top: 40rpx;
    z-index: 2;

}

.others .bg-view .flex-text image{
    height: 92rpx;
    width: 92rpx;
    border: 4rpx solid #fff;
    border-radius: 100%;
    margin-right: 30rpx;
}

.others .bg-view .button {
        border: 1rpx solid #FFFFFF;
        border-radius: 6rpx;
        width: 100rpx;
        height: 48rpx;
        line-height: 48rpx;
        font-size: 28rpx;
        color: #FFFFFF;
        letter-spacing: 0.4rpx;
        position: absolute;
        z-index: 3;
        right: 40rpx;
        margin-top: -24rpx;
        top: 50%;
        background-color: transparent;
        padding: 0;
}