
.data {
    position: relative;
    background: #fff;
    
}
.data .head {
    position: absolute;
    width: 50rpx;
    height: 50rpx;
    left: 25rpx;
    top: 30rpx;
    border-radius: 50%;
}
.data .content {
    margin: 0 35rpx 0 100rpx;
    
}
.data .content .top{
    font-size: 28rpx;
    color: #888888;
    letter-spacing: 0.4rpx;
    height: 40rpx;
    line-height: 40rpx;
    padding-top: 33rpx;
}
 
.data .content .msg {
    text-align: left;
    font-size: 28rpx;
    color: #353535;
    letter-spacing: 0.35rpx;
    margin-top: 19rpx;
}

 
.data .bottom {
    margin: 0 35rpx 0 100rpx;
    line-height: 60rpx;
    height: 60rpx;
    text-align: right;
    
}
.data .bottom image{
    width: 30rpx;
    height: 24rpx;
}
 .data .bottom .left{
    float: left;
     font-size: 24rpx;
     color: #888888;
    letter-spacing: 0.34rpx;
 }
.data:last-child .bottom {
    border-bottom: none;
}

.my-list .li{
    border-bottom: 1rpx solid #E6E6E6;
    padding-bottom: 20rpx;
    margin: 0 30rpx 0 100rpx;
}

.my-list .li  .content {
    margin: 0;
}