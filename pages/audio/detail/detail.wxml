<view class='detali'>

    <view class='data'>
        <image class='head' src='{{comment.avatarUrl}}'></image>
        <view class='content'>
            <view class='top'>
                <view class='l'>{{comment.nickName}}</view>
                <view class='r'>{{comment.createTime}}</view>
            </view>
            <view class='msg'>
                {{comment.content}}
            </view>
        </view>
        <view 
            data-name='{{comment.nickName}}'
            data-userid='{{comment.userId}}'
            data-id='{{comment.id}}'
            bindtap="showReply"
            class='bottom'>
            <image src='/images/icon-square-6-reply.png'></image>
        </view>
        
        <view class='reply' wx:if="{{comment.replyList && comment.replyList.length > 0}}"  >

            <block wx:for="{{comment.replyList}}" wx:for-index="idx" wx:key="item">
                <view 
                    data-name='{{item.nickName}}'
                    data-userid='{{item.userId}}'
                    data-id='{{comment.id}}'
                    bindtap="showReply"
                    class='t' >
                    <image class='head' src='{{item.avatarUrl}}'></image>
                    {{item.nickName}}
                    <block wx:if="{{comment.userId != item.toUserId }}"> 回复 {{item.toNickName}}</block>
                    ：{{item.content}}
                    <view class='time flex-text'>
                       {{item.createTime}}
                        <image src='/images/icon-square-6-reply.png'></image>
                    </view>
                </view>
            </block>

        </view>


    </view>

</view>

<dialog id='dialog' bind:confirmMsgEvent="_confirmMsgEvent">
</dialog>